{
  "manifest_version": 2,
  "name": "Sakuga Booru Button",
  "version": "1.3",

  "description": "Button for Sakuga Booru media",
  "homepage_url": "https://gitea.com/resi/Sakuga-MEGAJUMP",

  "icons": {
    "48": "extension-icon.svg"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["headers.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["headers.js", "background.js"]
  },
  "page_action": {
    "default_icon": "icon.svg",
    "show_matches": ["https://*.sakugabooru.com/data/*"],
    "default_title": "Jump to Sakuga Booru post"
  }
}
