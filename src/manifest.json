{
  "manifest_version": 2,
  "name": "Sakuga",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",
  "homepage_url": "https://example.com",

  "icons": {
    "48": "extension-icon.svg"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["headers.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["headers.js", "background.js"]
  },
  "page_action": {
    "default_icon": "icon.svg",
    "show_matches": ["https://*.sakugabooru.com/data/*"],
    "default_title": "Visit Sakuga Booru post"
  }
}
